<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929">

    <!--Логотип -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="146dp"
        android:layout_marginTop="175dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
    <!--Элемент-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="196dp"
        android:layout_marginTop="125dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_element"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="ContentDescription" />
    <!--Элемент 2 -->
    <FrameLayout
        android:layout_width="355dp"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />
    <!--Заголовок -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/spectral_regular"
        android:text="Присоединись к нам прямо сейчас !"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="HardcodedText,TextSizeCheck" />
<!--Кнопка email-->
    <EditText
        android:id="@+id/editEmail_ap"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/spectral_regular"
        android:hint="Введите email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <!--Кнопка логин-->
    <EditText
        android:id="@+id/editLogin_ap"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/spectral_regular"
        android:hint="Введите логин"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmail_ap" />
    <!--Кнопка пароль-->
    <EditText
        android:id="@+id/editPassword_ap"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/spectral_regular"
        android:hint="Введите пароль"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLogin_ap" />
    <!--Кнопка зарегистрироваться-->
    <android.widget.Button
        android:id="@+id/btnSignUp_ap"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_rounded_button"
        android:backgroundTint="@color/darkgrey"
        android:fontFamily="@font/spectral_regular"
        android:text="Зарегистрироваться"
        android:textColor="@color/yellow"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword_ap"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>